description "CFP Junction application service"
author      "PSSI Devs"

start       on     startup
stop        on     shutdown
respawn

setuid  app

script
    export DJANGO_SETTINGS_MODULE="settings"
    export LANG="en_US.UTF-8"
    exec /opt/envs/junction/bin/uwsgi --ini /etc/uwsgi/junction.ini
end script
